# Green Glass Admin Center - Allow Access
# Enable PHP and proper routing

RewriteEngine On

# Allow access to admin files
<Files "*.php">
    Require all granted
</Files>

<Files "*.html">
    Require all granted
</Files>

# PHP Error Display (temporarily for debugging)
php_flag display_errors On
php_flag display_startup_errors On
php_value error_reporting "E_ALL"

# Default index file
DirectoryIndex login.php index.php index.html
