{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "🎮 Start Quiz Game Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/app.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "restart": true,
            "runtimeArgs": [
                "--inspect"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "🔧 Debug Database Connection",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/test-db-switcher.js",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "🗄️ Setup Database Questions",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/setup-extended-questions.js",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}